tokenising
virtualise
virtualisation

End-of-File
if [ $debug -gt 0 ]
then
    echo >&2 "Common words ..."
    fmt <$tmp.tmp >&2
fi

# turn the common words list into a sed cull script
#
sed <$tmp.tmp >>$tmp.common \
    -e 's/.*/\/^&$\/d/' \
# end

for file
do
    if [ ! -f "$file" ]
    then
	echo "Error: input file $file not found"
	exit 1
    fi
    [ $# -gt 1 ] && echo "$file:"

    cp $tmp.common $tmp.sed

    # get lines like this from the .SH SYNOPSIS section
    # CLNoPruy from
    # [\f3\-CLNoPruy?\f1]
    # conffile from
    # [\f3\-c\f1 \f2conffile\f1]
    # metricpath from
    # .I metricpath
    #
    awk <"$file" '
$1 == ".SH" && $2 == "SYNOPSIS" { want = 1; next }
want == 1 && $1 == ".SH"	{ exit }
want == 1			{ print }' \
    | sed -e 's/^\.I /\\fI/' \
    | tr ' ' '\012' \
    | sed -n \
	-e 's/^\[//' \
	-e '/^\\f[2I]\([A-Za-z]\)/{
s//\1/
s/\\f.*//
p
}' \
	-e '/^\\f[3B]\\-[A-Za-z][A-Za-z][A-Za-z?]*/{
s/^\\f[3B]\\-//
s/[^A-Za-z].*//
p
}' \
    | tr ' ' '\012' \
    | uniq \
    | sed -e '/^ *$/d' >$tmp.tmp
    if [ $debug -gt 0 ]
    then
	echo >&2 "Args from .SH SYNOPSIS section ..."
	fmt <$tmp.tmp >&2
    fi
    sed <$tmp.tmp >>$tmp.sed \
	-e '/^$/d' \
	-e ' s/.*/\/^&$\/d/' \
    # end

    # and long-form options where ever they are found ...
    # for --foo-bar we need to add foo and bar, because ispell
    # treats '-' as a word delimiter
    #
    tr <"$file" ' ' '\012' \
    | sed -n >$tmp.tmp \
	-e '/\\-\\-/{
s/.*\\-\\-//
s/[^A-Za-z_-].*//
p
}' \
    # end
    if [ $debug -gt 0 ]
    then
	echo >&2 "Long --options ..."
	fmt <$tmp.tmp >&2
    fi
    sed <$tmp.tmp >>$tmp.sed \
	-e '/^$/d' \
	-e ' s/.*/\/^&$\/d/' \
    # end

    # and for .\" +ok+ lines, all words remaining on the line are
    # spelled correctly ... comments are [comment] ... use \[
    # to use [ in a pattern for a group of words, not a comment
    #
    sed -n <"$file" \
	-e '/^\.\\" +ok+ /{
s///
s/\\\[/{/g
s/\[[^[]*]//g
s/  */ /g
s/{/[/g
p
}' \
    | tr ' ' '\012' >$tmp.tmp
    if [ $debug -gt 0 ]
    then
	echo >&2 "+ok+ lines from $file ..."
	fmt <$tmp.tmp >&2
    fi
    sed <$tmp.tmp >>$tmp.sed \
	-e '/^$/d' \
	-e ' s/.*/\/^&$\/d/' \
    # end

    if [ $debug -gt 1 ]
    then
	echo >&2 "sed script ..."
	cat >&2 $tmp.sed
    fi


    # strip ...
    # - .TH lines
    # - troff comments
    # - tbl(1) format section (includes cw, cf, rf, lf, etc
    # - C-style hex constants
    # - leading @ in a line
    # then ispell (so we can treat _ as part of a word), sort, remove
    # duplicates, and then cull exceptions ...
    #
    if sed <"$file" >$tmp.1 \
	    -e '/^\.TH/d' \
	    -e '/^.\\"/d' \
	    -e "/^'\\\\\"/d" \
	    -e 's/0x[0-9a-f][0-9a-f]*//' \
	    -e 's/^@//' \
	# end
    then
	:
    else
	echo "Error: $file: initial sed failed"
	exit
    fi
    if awk <$tmp.1 >$tmp.2 2>$tmp.err '
$1 == ".TS"			{ skip = 1; next }
skip == 1 && $NF ~ /\.$/	{ skip = 0; next }
skip == 0			{ print }'
    then
	:
    else
	cat $tmp.err
	echo "Error: $file: tbl format sectionm culling failed"
	exit
    fi
    if ispell $dict -a -w '_' <$tmp.2 >$tmp.3 2>$tmp.err
    then
	:
    else
	cat $tmp.err
	echo "Error: $file: ispell failed"
	exit
    fi
    cat $tmp.err >>$tmp.3
    if sed -n <$tmp.3 >$tmp.4 2>$tmp.err \
	-e '/^[#&] /{
s/^. //
s/ .*//
p
}' \
	-e "/^Word '\\([^']*\\)' contains illegal characters/"'{
s//\1/
s/^  *//
s/ .*//
p
}' \
	# end
    then
	:
    else
	cat $tmp.err
	echo "Error: $file: ispell sed failed"
	exit
    fi

    # assume this one will work!
    #
    LC_COLLATE=POSIX sort <$tmp.4 \
    | uniq >$tmp.5

    if sed -E -f $tmp.sed <$tmp.5 >$tmp.out
    then
	:
    else
	cat $tmp.err
	echo "Error: $file: final sed failed"
	exit
    fi
    
    if [ -s $tmp.out ]
    then
	# something to report
	#
	if $emit
	then
	    echo '.\" control lines for scripts/man-spell'
	    fmt -70 <$tmp.out \
	    | sed -e 's/^/.\\" +ok+ /'
	else
	    cat $tmp.out
	fi
    else
	if $emit
	then
	    echo '.\" control lines not needed for scripts/man-spell'
	fi
    fi

done

status=0
exit
