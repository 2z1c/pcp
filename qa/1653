#

if [ $# -eq 0 ]
then
    seq=`basename $0`
    echo "QA output created by $seq"
else
    # use $seq from caller, unless not set
    [ -n "$seq" ] || seq=`basename $0`
    echo "QA output created by `basename $0` $*"
fi

# get standard environment, filters and checks
. ./common.product
. ./common.filter
. ./common.check

do_valgrind=false
if [ "$1" = "--valgrind" ]
then
    _check_valgrind
    do_valgrind=true
fi

# test for-some-thing || _notrun No support for some-thing

_cleanup()
{
    cd $here
    $sudo rm -rf $tmp $tmp.*
}

status=0	# success is the default!
$sudo rm -rf $tmp $tmp.* $seq.full
trap "_cleanup; exit \$status" 0 1 2 3 15

_filter()
{
    sed \
	-e 's/<something>/<else>/' \
    # end
}

# real QA test starts here

if $do_valgrind
then
    _run_valgrind ...your test goes here...
else
	cd /usr/libexec/pcp/pmdas/denki

	echo -e "\n### Installing test dataset 1...\n"
	ROOTPATH="/var/lib/pcp/testsuite/denki/Thinkpad_L480_bat_busy"
	sudo sed -ie \
		"s,^args.*,args=\"-U root -r ${ROOTPATH}\","  \
		Install
	sudo ./Install 2>&1
	pminfo -fF denki

	echo -e "\n### Installing test dataset 2...\n"
	ROOTPATH="/var/lib/pcp/testsuite/denki/bigsystem"
	sudo sed -ie \
		"s,^args.*,args=\"-U root -r ${ROOTPATH}\","  \
		Install
	sudo ./Install 2>&1
	pminfo -fF denki
fi \
| _filter

# if really bad error
#status=1
#exit

# optional stuff if your test has verbose output to help resolve problems
#echo
#echo "If failure, check $seq.full"

# success, all done
exit
